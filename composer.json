{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "juniorfontenele/laravel-starter",
    "type": "project",
    "description": "Laravel 12 Starter Kit",
    "keywords": [
        "laravel",
        "framework"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.4",
        "fakerphp/faker": "^1.24",
        "laravel/framework": "^12.0",
        "laravel/tinker": "^2.10.1",
        "opcodesio/log-viewer": "^3.19",
        "sentry/sentry-laravel": "^4.15"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.16",
        "barryvdh/laravel-ide-helper": "^3.6",
        "driftingly/rector-laravel": "^2.0",
        "laradumps/laradumps": "^4.0",
        "larastan/larastan": "^3.0",
        "laravel/pail": "^1.2.2",
        "laravel/pint": "^1.24",
        "laravel/sail": "^1.41",
        "lucascudo/laravel-pt-br-localization": "^3.0",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.6",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0",
        "rector/rector": "^2.1",
        "soloterm/solo": "^0.5.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
            "@php artisan log-viewer:publish",
            "@php artisan ide-helper:generate",
            "@php artisan ide-helper:meta"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi",
            "@php artisan ds:init $(pwd)"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite --kill-others"
        ],
        "test": [
            "@php artisan config:clear --ansi",
            "@php vendor/bin/pest --colors=always --env=testing"
        ],
        "qa:pint:fix": "@php vendor/bin/pint",
        "qa:pint:test": "@php vendor/bin/pint --test",
        "qa:pint:bail": "@php vendor/bin/pint --bail",
        "qa:rector:dry": "@php vendor/bin/rector process --dry-run --no-progress-bar --memory-limit=2G",
        "qa:rector:apply": "@php vendor/bin/rector process --no-progress-bar --memory-limit=2G",
        "qa:stan": "@php vendor/bin/phpstan analyze --ansi --memory-limit=2G",
        "qa:test": "@test",
        "qa:test:ci": [
            "@php artisan config:clear --ansi",
            "@php vendor/bin/pest --ci"
        ],
        "qa:debug:check": "@php vendor/bin/laradumps check --dir=app,routes,config,database --text=dump,dd,var_dump,print_r",
        "qa:fix": [
            "@qa:pint:fix",
            "@qa:rector:apply"
        ],
        "qa:verify": [
            "@qa:pint:test",
            "@qa:rector:dry",
            "@qa:stan",
            "@qa:debug:check",
            "@qa:test:ci"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
